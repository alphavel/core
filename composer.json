{
    "name": "alphavel/alphavel",
    "description": "Core components of Alphavel Framework - Ultra-fast PHP framework powered by Swoole",
    "type": "library",
    "keywords": ["framework", "swoole", "high-performance", "alphavel", "php"],
    "license": "MIT",
    "authors": [
        {
            "name": "Arthur Weber",
            "email": "arthur@alphavel.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "psr/container": "^2.0",
        "psr/log": "^3.0"
    },
    "suggest": {
        "ext-swoole": "Required for async/coroutine features and high-performance server (520k+ req/s)"
    },
    "autoload": {
        "psr-4": {
            "Alphavel\\Framework\\": ""
        },
        "files": [
            "helpers.php"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
